<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graybg"
    tools:context=".DashboardFragment">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invite_text"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Emergency Contacts"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toTopOf="@id/ans"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:textColor="@color/pastel_green"
        />

    <EditText
        android:id="@+id/ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/invite_card"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="125dp"
        app:layout_constraintTop_toBottomOf="@id/invite_text"
        android:layout_marginBottom="10dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add"
        app:layout_constraintStart_toEndOf="@id/ans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invite_text"
        app:layout_constraintBottom_toTopOf="@id/invite_card"
        android:backgroundTint="@color/pastel_pink"
        />

</androidx.constraintlayout.widget.ConstraintLayout>